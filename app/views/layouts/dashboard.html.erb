<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>

  <body>
    <%= render 'layouts/messages' %>

    <div class="h-screen flex overflow-hidden bg-gray-100" data-controller="sidebar">
      <div class="fixed inset-0 flex z-40 md:hidden invisible" role="dialog" aria-modal="true" data-sidebar-target="menu">
        <div class="fixed inset-0 bg-gray-600 bg-opacity-75 opacity-0 transition-opacity ease-linear duration-300" data-sidebar-target="background" aria-hidden="true"></div>
        <div class="relative flex-1 flex flex-col max-w-xs w-full pt-5 pb-4 bg-indigo-700 transition ease-in-out duration-300 transform -translate-x-full" data-sidebar-target="menuContent">
          <div class="absolute top-0 right-0 -mr-12 pt-2 ease-in-out duration-300 opacity-0" data-sidebar-target="closeBtn">
            <button data-action="click->sidebar#close" type="button" class="ml-1 flex items-center justify-center h-10 w-10 rounded-full focus:outline-none focus:ring-2 focus:ring-inset focus:ring-white">
              <span class="sr-only">Close sidebar</span>
              <%= heroicon "x", options: { class: "text-white" } %>
            </button>
          </div>

          <div class="flex-shrink-0 flex items-center px-4">
            <%= image_tag "logo.png", class: "h-24 w-auto", alt: "logo" %>
          </div>
          <div class="mt-5 flex-1 h-0 overflow-y-auto">
            <nav class="px-2 space-y-1">
              <!-- Current: "bg-indigo-800 text-white", Default: "text-indigo-100 hover:bg-indigo-600" -->
              <a href="#" class="bg-indigo-800 text-white group flex items-center px-2 py-2 text-base font-medium rounded-md">
                <%= heroicon "home", options: { class: "mr-4 flex-shrink-0 text-indigo-300" } %>
                Dashboard
              </a>
            </nav>
          </div>
        </div>

        <div class="flex-shrink-0 w-14" aria-hidden="true">
          <!-- Dummy element to force sidebar to shrink to fit close icon -->
        </div>
      </div>

      <!-- Static sidebar for desktop -->
      <div class="hidden bg-indigo-700 md:flex md:flex-shrink-0">
        <div class="flex flex-col w-64">
          <!-- Sidebar component, swap this element with another sidebar if you like -->
          <div class="flex flex-col flex-grow pt-5 pb-4 overflow-y-auto">
            <div class="flex items-center flex-shrink-0 px-4">
              <%= image_tag "logo.png", class: "h-24 w-auto", alt: "logo" %>
            </div>
            <div class="mt-5 flex-1 flex flex-col">
              <nav class="flex-1 px-2 space-y-1">
                <!-- Current: "bg-indigo-800 text-white", Default: "text-indigo-100 hover:bg-indigo-600" -->
                <a href="#" class="bg-indigo-800 text-white group flex items-center px-2 py-2 text-sm font-medium rounded-md">
                  <%= heroicon "home", options: { class: "mr-3 flex-shrink-0 text-indigo-300" } %>
                  Dashboard
                </a>
              </nav>
            </div>
          </div>
        </div>
      </div>
      <div class="flex flex-col w-0 flex-1 overflow-hidden">
        <div class="relative z-10 flex-shrink-0 flex h-16 bg-white shadow">
          <button type="button" data-action="click->sidebar#open" class="px-4 border-r border-gray-200 text-gray-500 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-indigo-500 md:hidden">
            <span class="sr-only">Open sidebar</span>
            <%= heroicon "menu-alt-2" %>
          </button>
          <div class="flex-1 px-4 flex justify-end">
            <div class="flex items-center">
              <div>
                <%= link_to "Sign out", destroy_user_session_path, method: "delete", class: "block px-4 py-2 text-sm text-gray-700" %>
              </div>
            </div>
          </div>
        </div>

        <main class="flex-1 relative overflow-y-auto focus:outline-none">
          <div class="py-6">
            <%= yield %>
          </div>
        </main>
      </div>
    </div>

  </body>
</html>
